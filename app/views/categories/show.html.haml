= render 'shared/navMenu', title: category.name, backUrl: categories_path, nextBtn: { title: 'Edit', path: edit_category_path(category) }

- unless notice.nil?
  .alert.alert-success= notice

- unless category.products.any?
  .alert.alert-info There are no any products yet.
- else
  %h4.text-center Active products:
  .col-md-6.col-md-offset-3
    %table.table.table-striped.table-hover
      %tbody
        - category.products.each do |product|
          %tr
            %td= link_to product.title, category_product_path(category.id, product.id)
            %td.text-right= number_to_currency(product.price)

%h3.col-md-12.text-center.form-bottom New product
= render 'products/form'
