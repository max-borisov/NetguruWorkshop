= render 'shared/navMenu', title: "Edit #{ resource_name.to_s.humanize }", backUrl: user_path(current_user)
%div.col-md-8.col-md-offset-2
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch }) do |f|
    = f.error_notification
    .form-inputs
      = f.input :firstname, autofocus: true
      = f.input :lastname
      = f.input :email
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %p
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      = f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false
      = f.input :password_confirmation, required: false
      = f.input :current_password, hint: "we need your current password to confirm your changes", required: true
    .form-actions
      = f.button :submit, "Update", class: 'btn btn-primary'