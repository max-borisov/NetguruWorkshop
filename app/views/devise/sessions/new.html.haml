%div.col-md-6.col-md-offset-3
  %h2.text-center Sign in
  = simple_form_for(resource, as: resource_name, url: new_user_session_path(resource)) do |f|
    - if flash[:alert]
      .alert.alert-danger #{flash[:alert]}
    .form-inputs
      = f.input :email, required: false, autofocus: true
      = f.input :password, required: false
      .checkbox
        = f.input_field :remember_me, as: :boolean, inline_label: 'Remember me' if devise_mapping.rememberable?
    .form-actions
      = f.button :submit, "Sign in"
  = render "devise/shared/links"
